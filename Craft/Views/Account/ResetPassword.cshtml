@model ForgetPassword
<section id="about-us" style=" background-image: url(img/about.svg);">
    <div class="container">
        <div class="row  align-items-center justify-content-center text-center">
            <div class="col-lg-6">
                <div class="text">
                    <h1>Reset Password</h1>
                    <a asp-controller="home" asp-action="index">Home</a> <i class="bi bi-chevron-right"></i> <a href="reset-psw.html">
                        Create new password
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="sign-up">
    <div class="container">
        <div class="row  justify-content-center text-center">
            <div class="col-lg-6">
                <div class="form-inner">
                    <form method="post">
                        <div class="form-required">
                            <input hidden asp-for="User.Email" />
                            <input hidden asp-for="Token" />
                            <div class="single-form">
                                <input asp-for="Password" class="form-control mb-3" placeholder="Enter new password">
                            </div>
                            <div class="single-form">
                                <input asp-for="ConfirmPassword" class="form-control mb-3" placeholder="Enter password again">
                            </div>
                            <div class="single-form">
                                <button type="submit" class="custom-btn w-100">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
