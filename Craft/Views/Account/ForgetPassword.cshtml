@model ForgetPassword
<section id="about-us" style=" background-image: url(img/about.svg);">
    <div class="container">
        <div class="row  align-items-center justify-content-center text-center">
            <div class="col-lg-6">
                <div class="text">
                    <h1>Reset Password</h1>
                    <a href="index.html">Home</a> <i class="bi bi-chevron-right"></i> <a href="reset-psw.html">
                        Reset
                        Password
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="sign-up">
    <div class="container">
        <div class="row  justify-content-center text-center">
            <div class="col-lg-6">
                <form method="post" asp-action="forgetpassword">
                    <div class="form-inner">
                        <div class="header ">
                            <h3>Reset Password</h3>
                            <p class="mb-5">
                                Need to reset your password? No problem! Just enter your email & click the
                                button below.
                            </p>
                        </div>
                        <div class="form-required">
                            <div class="row">
                                <div class="col-lg-12 position-relative mb-4">
                                    <input asp-for="User.Email" class="form-control" placeholder="Enter your email" required>
                                    <i class="bi bi-envelope"></i>
                                </div>
                                <div class="col-lg-12">
                                    <button class="custom-btn w-100" type="submit">Send</button>
                                </div>
                                <h4 class="create-account mt-5">
                                    Login to your account <a asp-controller="account" asp-action="login">
                                        Click
                                        here
                                    </a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
