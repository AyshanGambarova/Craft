@model LoginViewModel
<section id="about-us" style=" background-image: url(img/about.svg);">
    <div class="container">
        <div class="row  align-items-center justify-content-center text-center">
            <div class="col-lg-6">
                <div class="text">
                    <h1>Sign In</h1>
                    <a href="index.html">Home</a> <i class="bi bi-chevron-right"></i> <a href="sign-in.html">
                        Sign In
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="sign-in">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-6">
                <div class="form">

                    <form method="post">
                        <div class="form-inner ">
                            <h3>Sign In Now</h3>
                            <p class="mb-5">Sign in by entering the information below.</p>
                            <div class="small text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-required mb-4">
                                <div class="col-lg-12">
                                    <input class="form-control mb-4" placeholder="Enter your email" asp-for="Email" required>
                                    <span class="small text-danger" asp-validation-for="Email"></span>
                                    <i class="bi bi-envelope"></i>
                                </div>
                                <div class="col-lg-12">
                                    <input class="form-control" placeholder="Enter your password" asp-for="Password" required>
                                    <span class="small text-danger" asp-validation-for="Password"></span>
                                    <i class="bi bi-lock"></i>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="form-check ps-0">
                                    <input type="checkbox" class="form-check-input width-auto" name="keepMeLoggedIn" value="true" checked>
                                    <label class="form-check-label">Remember me</label>
                                </div>
                                <div>
                                    <a asp-controller="account" asp-action="forgetpassword" class="forgot">Forgot password?</a>
                                </div>
                            </div>
                            <div class="col-lg-12 mt-4 mb-5 ">
                                <button class="custom-btn w-100" type="submit">Sign In</button>
                            </div>
                            <div class="hrdivider">
                                <hr />
                                <span>Or</span>
                            </div>
                            <p class="mt-5">Sign in with your work email</p>
                            <div>
                                <a href="https://accounts.google.com/AccountChooser/signinchooser?flowName=GlifWebSignIn&flowEntry=AccountChooser"
                                   class="google-btn">
                                    <img src="https://demo.graygrids.com/themes/craft/assets/images/account-login/google.png">
                                    <span class="ms-3">Sign In With Google</span>

                                </a>
                            </div>
                            <h4 class="create-account mt-5">
                                Don't have an account? <a asp-controller="account" asp-action="register">
                                    Sign Up
                                    Here
                                </a>
                            </h4>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>